{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - D√©veloppeur{% endblock %}

{% block body %}
<style>
    .dashboard-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2rem;
    }

    .welcome-header {
        text-align: center;
        margin-bottom: 3rem;
        padding: 2rem;
        background: linear-gradient(135deg, #7b1fa2, #9c27b0);
        color: white;
        border-radius: 8px;
    }

    .welcome-header h1 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 600;
    }

    .welcome-header p {
        margin: 0.5rem 0 0 0;
        font-size: 1.2rem;
        opacity: 0.9;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        text-align: center;
        transition: transform 0.2s;
    }

    .stat-card:hover {
        transform: translateY(-4px);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #666;
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .stat-total { color: #7b1fa2; }
    .stat-nouveau { color: #f57c00; }
    .stat-assigne { color: #0277bd; }
    .stat-en-cours { color: #7b1fa2; }
    .stat-resolu { color: #2e7d32; }

    .actions-section {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        margin-bottom: 3rem;
        text-align: center;
    }

    .actions-section h2 {
        color: #7b1fa2;
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
    }

    .action-buttons {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 1rem 2rem;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #7b1fa2, #9c27b0);
        color: white;
    }

    .btn-info {
        background: linear-gradient(135deg, #0277bd, #03a9f4);
        color: white;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.2);
        color: white;
    }

    .recent-tickets {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .recent-tickets h2 {
        color: white;
        background: #7b1fa2;
        margin: 0;
        padding: 1.5rem 2rem;
        font-size: 1.8rem;
    }

    .tickets-list {
        padding: 0;
    }

    .ticket-item {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background-color 0.2s;
    }

    .ticket-item:hover {
        background-color: #f8f9fa;
    }

    .ticket-item:last-child {
        border-bottom: none;
    }

    .ticket-info h3 {
        margin: 0 0 0.5rem 0;
        color: #333;
        font-size: 1.1rem;
    }

    .ticket-meta {
        color: #666;
        font-size: 0.9rem;
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .status-badge, .priority-badge {
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .status-nouveau { background-color: #fff3e0; color: #f57c00; }
    .status-ouvert { background-color: #e3f2fd; color: #0d47a1; }
    .status-assigne { background-color: #e1f5fe; color: #0277bd; }
    .status-en-cours { background-color: #f3e5f5; color: #7b1fa2; }
    .status-resolu { background-color: #e8f5e8; color: #2e7d32; }
    .status-ferme { background-color: #f5f5f5; color: #616161; }

    .priority-basse { background-color: #e8f5e8; color: #2e7d32; }
    .priority-normale { background-color: #fff3e0; color: #f57c00; }
    .priority-haute { background-color: #fff3e0; color: #ff6f00; }
    .priority-critique { background-color: #ffebee; color: #c62828; }

    .ticket-actions {
        display: flex;
        gap: 0.5rem;
    }

    .btn-small {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-view {
        background-color: #64b5f6;
        color: white;
    }

    .btn-edit {
        background-color: #81c784;
        color: white;
    }

    .btn-small:hover {
        transform: translateY(-1px);
        color: white;
    }

    .no-tickets {
        padding: 3rem 2rem;
        text-align: center;
        color: #666;
    }

    .no-tickets h3 {
        color: #7b1fa2;
        margin-bottom: 1rem;
    }

    .urgency-indicator {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        background: #fff3e0;
        border-left: 4px solid #ff6f00;
        border-radius: 0 6px 6px 0;
        margin-bottom: 2rem;
    }

    .urgency-indicator h3 {
        margin: 0 0 0.5rem 0;
        color: #ff6f00;
        font-size: 1.2rem;
    }

    .urgency-count {
        font-size: 2rem;
        font-weight: 700;
        color: #ff6f00;
    }

    @media (max-width: 768px) {
        .dashboard-container {
            margin: 1rem;
            padding: 1rem;
        }
        
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .action-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .ticket-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
        
        .ticket-actions {
            width: 100%;
            justify-content: flex-end;
        }
    }
</style>

<div class="dashboard-container">
    <div class="welcome-header">
        <h1>üë®‚Äçüíª Tableau de bord D√©veloppeur</h1>
        <p>Bienvenue {{ app.user.prenom }} ! Voici vos tickets √† traiter.</p>
    </div>

    <!-- Indicateur d'urgence -->
    {% if statistiques.en_cours > 0 %}
        <div class="urgency-indicator">
            <h3>‚ö° Tickets en cours de traitement</h3>
            <div class="urgency-count">{{ statistiques.en_cours }}</div>
        </div>
    {% endif %}

    <!-- Statistiques -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-number stat-total">{{ statistiques.total }}</div>
            <div class="stat-label">Total assign√©s</div>
        </div>
        <div class="stat-card">
            <div class="stat-number stat-nouveau">{{ statistiques.nouveau }}</div>
            <div class="stat-label">Nouveaux</div>
        </div>
        <div class="stat-card">
            <div class="stat-number stat-assigne">{{ statistiques.assigne }}</div>
            <div class="stat-label">Assign√©s</div>
        </div>
        <div class="stat-card">
            <div class="stat-number stat-en-cours">{{ statistiques.en_cours }}</div>
            <div class="stat-label">En cours</div>
        </div>
        <div class="stat-card">
            <div class="stat-number stat-resolu">{{ statistiques.resolu }}</div>
            <div class="stat-label">R√©solus</div>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="actions-section">
        <h2>üõ†Ô∏è Actions rapides</h2>
        <div class="action-buttons">
            <a href="{{ path('ticket_index') }}" class="btn btn-primary">
                üìã Voir tous mes tickets
            </a>
            <a href="{{ path('ticket_index') }}?status=En cours" class="btn btn-info">
                üîÑ Tickets en cours
            </a>
        </div>
    </div>

    <!-- Tickets r√©cents -->
    <div class="recent-tickets">
        <h2>üïí Mes derniers tickets assign√©s</h2>
        
        {% if mesTickets|length > 0 %}
            <div class="tickets-list">
                {% for ticket in mesTickets %}
                    <div class="ticket-item">
                        <div class="ticket-info">
                            <h3>#{{ ticket.ticketId }} - {{ ticket.titreTicket }}</h3>
                            <div class="ticket-meta">
                                <span>üìÖ {{ ticket.dateCreation|date('d/m/Y') }}</span>
                                <span>üè∑Ô∏è {{ ticket.typeTicket ?? 'Non d√©fini' }}</span>
                                <span class="status-badge status-{{ ticket.statutTicket|lower|replace({' ': '-'}) }}">
                                    {{ ticket.statutTicket ?? 'Nouveau' }}
                                </span>
                                <span class="priority-badge priority-{{ ticket.prioriteTicket|lower|replace({' ': '-'}) }}">
                                    {{ ticket.prioriteTicket ?? 'Normale' }}
                                </span>
                                {% if ticket.projet %}
                                    <span>üìÅ {{ ticket.projet.nomProjet }}</span>
                                {% endif %}
                                {% if ticket.rapporteur %}
                                    <span>üë§ {{ ticket.rapporteur.prenom }} {{ ticket.rapporteur.nom }}</span>
                                {% endif %}
                                {% if ticket.dateEcheance %}
                                    <span>‚è∞ √âch√©ance: {{ ticket.dateEcheance|date('d/m/Y') }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="ticket-actions">
                            <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="btn-small btn-view">
                                üëÅÔ∏è Voir
                            </a>
                            <a href="{{ path('ticket_edit', {'id': ticket.id}) }}" class="btn-small btn-edit">
                                ‚úèÔ∏è Traiter
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-tickets">
                <h3>üé´ Aucun ticket assign√©</h3>
                <p>Aucun ticket ne vous est actuellement assign√©.</p>
                <p>Contactez votre administrateur si vous pensez qu'il y a une erreur.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}