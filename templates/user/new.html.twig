{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}
    <style>
        .form-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #ffffffdd;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-container h1 {
            font-size: 1.8rem;
            color: #0d47a1;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 1rem;
            text-decoration: none;
            color: #0d47a1;
        }

        .back-link:hover {
            text-decoration: underline;
        }
    </style>

    <div class="form-container">
        <h1>Créer un nouvel utilisateur</h1>
        {{ include('user/_form.html.twig') }}
        <a href="{{ path('user_index') }}" class="back-link">← Retour à la liste</a>
    </div>
{% endblock %}
