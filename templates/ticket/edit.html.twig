{% extends 'base.html.twig' %}

{% block title %}Modifier le ticket #{{ ticket.ticketId }}{% endblock %}

{% block body %}
<style>
    :root {
        --primary-color: #4f46e5;
        --primary-hover: #4338ca;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --error-color: #ef4444;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-300: #d1d5db;
        --gray-400: #9ca3af;
        --gray-500: #6b7280;
        --gray-600: #4b5563;
        --gray-700: #374151;
        --gray-800: #1f2937;
        --gray-900: #111827;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --border-radius: 0.75rem;
    }

    * {
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: linear-gradient(135deg, var(--gray-50) 0%, #e0e7ff 100%);
        min-height: 100vh;
        padding: 2rem 1rem;
        margin: 0;
    }

    .ticket-edit-container {
        max-width: 1000px;
        margin: 0 auto;
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-lg);
        overflow: hidden;
        animation: slideUp 0.6s ease-out;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .edit-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
        color: white;
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

    .edit-header::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        transform: translate(30px, -30px);
    }

    .edit-header h1 {
        margin: 0 0 1rem 0;
        font-size: 2rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .ticket-id-badge {
        display: inline-block;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 0.875rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .current-info {
        background: var(--gray-50);
        padding: 1.5rem 2rem;
        border-left: 4px solid var(--primary-color);
        margin: 0;
    }

    .current-info h3 {
        margin: 0 0 0.75rem 0;
        color: var(--gray-700);
        font-size: 1.125rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .current-info p {
        margin: 0;
        color: var(--gray-600);
        font-size: 1rem;
        background: white;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-200);
    }

    .permission-notice {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        color: var(--gray-800);
        padding: 1.5rem 2rem;
        border-left: 4px solid var(--warning-color);
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .form-container {
        padding: 2rem;
    }

    .form-errors {
        background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
        border: 1px solid #fecaca;
        border-radius: var(--border-radius);
        padding: 1.5rem;
        margin-bottom: 2rem;
        border-left: 4px solid var(--error-color);
    }

    .form-errors h4 {
        margin: 0 0 1rem 0;
        color: var(--error-color);
        font-size: 1.125rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-section {
        background: white;
        border-radius: var(--border-radius);
        padding: 0;
        margin-bottom: 2rem;
    }

    .section-title {
        background: var(--gray-50);
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--gray-200);
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--gray-800);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        border-radius: var(--border-radius) var(--border-radius) 0 0;
    }

    .form-content {
        padding: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group:last-child {
        margin-bottom: 0;
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-row:last-child {
        margin-bottom: 0;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--gray-700);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.025em;
    }

    .form-control {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid var(--gray-200);
        border-radius: 0.5rem;
        font-size: 1rem;
        line-height: 1.5;
        color: var(--gray-900);
        background: white;
        transition: all 0.2s ease;
        font-family: inherit;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
        transform: translateY(-1px);
    }

    .form-control:hover {
        border-color: var(--gray-300);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 120px;
        font-family: inherit;
    }

    select.form-control {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.75rem center;
        background-repeat: no-repeat;
        background-size: 1.5em 1.5em;
        padding-right: 3rem;
        appearance: none;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        padding: 2rem;
        background: var(--gray-50);
        border-top: 1px solid var(--gray-200);
        margin: 0 -2rem -2rem -2rem;
        border-radius: 0 0 var(--border-radius) var(--border-radius);
    }

    .btn {
        padding: 0.875rem 2rem;
        border: none;
        border-radius: 0.5rem;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: center;
        justify-content: center;
        min-width: auto;
    }

    .btn-success {
        background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%);
        color: white;
        box-shadow: var(--shadow-sm);
    }

    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
        background: linear-gradient(135deg, #059669 0%, #047857 100%);
    }

    .btn-secondary {
        background: var(--gray-100);
        color: var(--gray-700);
        border: 1px solid var(--gray-300);
    }

    .btn-secondary:hover {
        background: var(--gray-200);
        transform: translateY(-1px);
        color: var(--gray-800);
    }

    .form-errors ul {
        margin: 0;
        padding-left: 1.5rem;
    }

    .form-errors li {
        color: var(--error-color);
        margin-bottom: 0.5rem;
    }

    .field-error {
        color: var(--error-color);
        font-size: 0.875rem;
        margin-top: 0.5rem;
        display: block;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        body {
            padding: 1rem 0.5rem;
        }

        .edit-header {
            padding: 1.5rem;
        }

        .edit-header h1 {
            font-size: 1.5rem;
        }

        .current-info,
        .form-container {
            padding: 1.5rem;
        }

        .form-row {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .form-actions {
            flex-direction: column-reverse;
            padding: 1.5rem;
        }

        .btn {
            width: 100%;
        }
    }

    /* Loading state */
    .btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none !important;
    }

    /* Focus visible for accessibility */
    .btn:focus-visible {
        outline: 2px solid var(--primary-color);
        outline-offset: 2px;
    }
</style>

<div class="ticket-edit-container">
    <div class="edit-header">
        <h1>‚úèÔ∏è Modifier le ticket</h1>
        <div class="ticket-id-badge">#{{ ticket.ticketId }}</div>
    </div>

    <div class="current-info">
        <h3>üìã Titre actuel</h3>
        <p>{{ ticket.titreTicket }}</p>
    </div>

    {% set activeRole = app.session.get('active_role') %}

    {% if activeRole == 'ROLE_RAPPORTEUR' and ticket.rapporteur != app.user %}
        <div class="permission-notice">
            ‚ö†Ô∏è Vous ne pouvez modifier que vos propres tickets.
        </div>
    {% elseif activeRole == 'ROLE_DEV' and ticket.developpeur != app.user %}
        <div class="permission-notice">
            ‚ö†Ô∏è Vous ne pouvez modifier que les tickets qui vous sont assign√©s.
        </div>
    {% else %}

        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            {% if not form.vars.valid %}
                <div class="form-errors">
                    <h4>‚ö†Ô∏è Veuillez corriger les erreurs suivantes :</h4>
                    {{ form_errors(form) }}
                </div>
            {% endif %}

            <div class="form-section">
                <div class="section-title">
                    üìã Modifier les champs du ticket
                </div>
                
                <div class="form-content">
                    <div class="form-group">
                        {{ form_label(form.titreTicket) }}
                        {{ form_widget(form.titreTicket, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez le titre du ticket...'}}) }}
                        {{ form_errors(form.titreTicket) }}
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            {{ form_label(form.typeTicket) }}
                            {{ form_widget(form.typeTicket, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.typeTicket) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.prioriteTicket) }}
                            {{ form_widget(form.prioriteTicket, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.prioriteTicket) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.descriptionTicket) }}
                        {{ form_widget(form.descriptionTicket, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'D√©crivez en d√©tail le probl√®me ou la demande...'}}) }}
                        {{ form_errors(form.descriptionTicket) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.dateEcheance) }}
                        {{ form_widget(form.dateEcheance, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateEcheance) }}
                    </div>

                    {% if form.projet is defined %}
                        <div class="form-group">
                            {{ form_label(form.projet) }}
                            {{ form_widget(form.projet, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.projet) }}
                        </div>
                    {% endif %}

                    <div class="form-row">
                        {% if form.ticketId is defined %}
                            <div class="form-group">
                                {{ form_label(form.ticketId) }}
                                {{ form_widget(form.ticketId, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.ticketId) }}
                            </div>
                        {% endif %}

                        {% if form.dateCreation is defined %}
                            <div class="form-group">
                                {{ form_label(form.dateCreation) }}
                                {{ form_widget(form.dateCreation, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.dateCreation) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-row">
                        {% if form.dateResolution is defined %}
                            <div class="form-group">
                                {{ form_label(form.dateResolution) }}
                                {{ form_widget(form.dateResolution, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.dateResolution) }}
                            </div>
                        {% endif %}

                        {% if form.rapporteur is defined %}
                            <div class="form-group">
                                {{ form_label(form.rapporteur) }}
                                {{ form_widget(form.rapporteur, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.rapporteur) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="btn btn-secondary">
                    ‚ùå Annuler
                </a>
                <button type="submit" class="btn btn-success" id="submitBtn">
                    üíæ Enregistrer les modifications
                </button>
            </div>

            {{ form_end(form) }}
        </div>

    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-resize textareas
    const textareas = document.querySelectorAll('textarea');
    textareas.forEach(function(textarea) {
        function autoResize() {
            textarea.style.height = 'auto';
            textarea.style.height = (textarea.scrollHeight) + 'px';
        }
        
        textarea.addEventListener('input', autoResize);
        autoResize(); // Initial resize
    });

    // Form submission loading state
    const form = document.querySelector('form');
    const submitBtn = document.getElementById('submitBtn');
    
    if (form && submitBtn) {
        form.addEventListener('submit', function() {
            submitBtn.disabled = true;
            submitBtn.innerHTML = '‚è≥ Enregistrement...';
        });
    }

    // Smooth focus transitions
    const inputs = document.querySelectorAll('.form-control');
    inputs.forEach(input => {
        input.addEventListener('focus', function() {
            this.parentElement.style.transform = 'scale(1.01)';
        });
        
        input.addEventListener('blur', function() {
            this.parentElement.style.transform = 'scale(1)';
        });
    });

    // Form validation feedback
    const errorFields = document.querySelectorAll('.form-control');
    errorFields.forEach(field => {
        const errorElement = field.parentElement.querySelector('.form-errors, .field-error');
        if (errorElement) {
            field.style.borderColor = 'var(--error-color)';
        }
    });
});
</script>
{% endblock %}